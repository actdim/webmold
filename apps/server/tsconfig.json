{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "composite": true,
        "moduleResolution": "node",
        "module": "esnext",
        "types": ["node"],
        "declarationDir": "./dist",
        "baseUrl": ".",
        "rootDir": ".", // "src"
        "outDir": "./dist",
        "paths": {
            "@/*": ["src/*"]
        }
    },
    "include": ["src/**/*.ts", "src/**/*.json", "tests/**/*.ts"],
    "exclude": ["dist", "node-modules"]
}
