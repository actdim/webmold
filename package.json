{
    "name": "webmold",
    "private": true,
    "version": "0.0.1",
    "type": "module",
    "packageManager": "pnpm@10.21.0",
    "scripts": {
        "lint": "eslint . -f visualstudio --ext .ts,.tsx --report-unused-disable-directives --max-warnings 0",
        "dev:webapp": "pnpm --filter webapp dev",
        "dev:server": "pnpm --filter server dev",
        "dev": "concurrently \"pnpm run dev:server\" \"pnpm run dev:webapp\"",
        "dev:a-p": "npm-run-all -p dev:server dev:web",
        "dev:a-s": "npm-run-all -s dev:server dev:web",
        "build": "tsc -b && vite build",
        "pnpm:u": "pnpm update",
        "pnpm:ou": "pnpm outdated",
        "ncu:l": "ncu",
        "ncu:u": "ncu -u",
        "ncu:ud": "ncu -u --dev",
        "nvm:la": "nvm list available",
        "nvm:il": "nvm install lts",
        "format": "prettier --write .",
        "format:check": "prettier --check ."
    },
    "workspaces": [
        "packages/*",
        "apps/*"
    ],
    "devDependencies": {
        "@iconify/icons-mdi": "^1.2.48",
        "@iconify/json": "^2.2.408",
        "@iconify/tailwind4": "^1.1.0",
        "@swc/core": "^1.15.2",
        "@tailwindcss/cli": "^4.1.17",
        "@tailwindcss/postcss": "^4.1.17",
        "@tailwindcss/typography": "^0.5.19",
        "@types/chai": "^5.2.3",
        "@types/mocha": "^10.0.10",
        "@types/node": "^24.10.0",
        "@typescript-eslint/eslint-plugin": "^8.46.3",
        "@typescript-eslint/parser": "^8.46.3",
        "@vitejs/plugin-react-swc": "^4.2.2",
        "chai": "^6.2.0",
        "concurrently": "^9.2.1",
        "eslint": "^9.39.1",
        "eslint-config-prettier": "^10.1.8",
        "eslint-formatter-visualstudio": "^9.0.1",
        "eslint-plugin-prettier": "^5.5.4",
        "eslint-plugin-react": "^7.37.5",
        "eslint-plugin-react-hooks": "^7.0.1",
        "eslint-plugin-react-refresh": "^0.4.24",
        "globals": "^16.5.0",
        "mocha": "^11.7.5",
        "npm-check-updates": "^19.1.2",
        "prettier": "^3.6.2",
        "prettier-plugin-classnames": "^0.8.5",
        "prettier-plugin-tailwindcss": "^0.7.1",
        "shx": "^0.4.0",
        "tailwindcss": "^4.1.17",
        "tsx": "^4.20.6",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.46.3",
        "vite": "^7.2.2",
        "vite-plugin-dts": "^4.5.4",
        "vite-tsconfig-paths": "^5.1.4",
        "vitest": "^4.0.10"
    }
}
